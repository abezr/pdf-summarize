{
  "name": "pdf-summary-ai",
  "version": "1.0.0",
  "description": "Document-aware PDF summarization with Knowledge Graph architecture and Multi-LLM support (OpenAI + Google)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "observability:start": "docker-compose -f docker-compose.observability.yml up -d",
    "observability:stop": "docker-compose -f docker-compose.observability.yml down",
    "observability:full": "docker-compose up -d prometheus grafana jaeger",
    "observability:full-stop": "docker-compose down prometheus grafana jaeger",
    "docker:dev": "./scripts/docker-dev.sh up",
    "docker:dev:full": "./scripts/docker-dev.sh up-full",
    "docker:dev:down": "./scripts/docker-dev.sh down",
    "docker:prod:build": "./scripts/docker-prod.sh build",
    "docker:prod:up": "./scripts/docker-prod.sh up",
    "docker:prod:down": "./scripts/docker-prod.sh down",
    "docker:build": "docker build -t pdfai-app:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t pdfai-app:dev ."
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@krakz999/tabula-node": "^1.0.6",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-jaeger": "^2.2.0",
    "@opentelemetry/exporter-prometheus": "^0.208.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@types/ws": "^8.18.1",
    "@xenova/transformers": "^2.17.2",
    "canvas": "^3.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cosine-similarity": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "node-pg-migrate": "^8.0.3",
    "openai": "^6.9.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "pdf-table-extractor": "^1.0.3",
    "pdf2pic": "^3.2.0",
    "pdfjs-dist": "^5.4.394",
    "pg": "^8.16.3",
    "prom-client": "^15.1.0",
    "redis": "^5.10.0",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.15.6",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.2",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pdf",
    "summarization",
    "ai",
    "llm",
    "openai",
    "google",
    "gemini",
    "knowledge-graph",
    "document-processing"
  ],
  "author": "",
  "license": "MIT"
}
