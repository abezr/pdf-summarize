{
  "dashboard": {
    "id": null,
    "title": "PDF Summary AI - Observability Dashboard",
    "tags": ["pdf", "ai", "summary", "observability"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "LLM API Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(llm_requests_total[5m])",
            "legendFormat": "{{provider}} {{model}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "LLM Cost Tracking",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(llm_cost_total[1h])",
            "legendFormat": "{{provider}} {{model}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 5,
        "title": "PDF Processing Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pdf_processing_total[5m])",
            "legendFormat": "{{operation}} {{status}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Graph Building Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(graph_build_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 7,
        "title": "Cache Hit Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100",
            "legendFormat": "{{cache_type}} hit rate %",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 8,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(errors_total[5m])",
            "legendFormat": "{{type}} {{component}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 9,
        "title": "Documents Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "documents_processed_total",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 32 }
      },
      {
        "id": 10,
        "title": "Summaries Generated",
        "type": "stat",
        "targets": [
          {
            "expr": "summaries_generated_total",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 32 }
      },
      {
        "id": 11,
        "title": "Total LLM Cost",
        "type": "stat",
        "targets": [
          {
            "expr": "llm_cost_total",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 32 }
      },
      {
        "id": 12,
        "title": "Evaluation Scores",
        "type": "gauge",
        "targets": [
          {
            "expr": "evaluation_score",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 32 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
